<table class="book_comments">
 <% book.book_comments.each do |book_comment| %>
<tr>
 <td><%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></td>
 <td><%= book_comment.user.name %></td>
 <td><%= book_comment.comment %></td>

 <% if book_comment.user_id == current_user.id %>
 <td><button type="button" class="btn btn-outline-danger"><%= link_to 'Destroy', book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote: true %></button></td>
 <% end %>
</tr>
 <% end %>
</table>