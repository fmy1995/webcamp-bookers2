
<div class="user-info">
<h1>User info</h1>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<p>name:<%= user.name %></p>
<P>introduction:<%= user.introduction %></P>
<% if user.id == current_user.id %>
  <p><i class="fas fa-user-cog"><%= link_to "プロフィール編集", edit_user_path(user) %></i></p>
<% end %>
</div>

<div class="new-book">
<% book.errors.full_messages.each do |message| %>
 <div id="error_explanation">
 <p>This error prohibited this book from being saved:</p>
 <li><%= message %></li></div>
<% end %>

<h1>New book</h1>
<%= form_with model: book, local:true do |f| %>
<div class = "field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>
<div class = "field">
  <label>Opinion</label>
  <%= f.text_area :body %>
</div>
<div class = "field">
  <%= f.submit 'Create Book' %>
</div>
<% end %>
</div>
