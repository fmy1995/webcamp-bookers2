
<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<main>
<div class="container">
<div class="row">
<div class="col-md-3">
<%= render 'books/list', book: @book, user: @user %>
</div> 

<div class="col-md-8">
<h1>Book detail</h1>
<% @books.each do |book| %>
<table>
<sction class =detail>
  <div class="item"><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></div>
  <div class="item"><%= link_to book_path(book.id) do %><p><%= book.title %></p></div>  <% end %>
  <div class="item"><p><%= book.body %></p></div>

<% end %>
</sction>
</table>
</div>
</div>
</div>
</main>
