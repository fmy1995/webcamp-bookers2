<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="container">
<div class="row">

 <div class="col-md-3">
  <% if flash[:notice] %>
   <p id ="notice"><%= flash[:notice] %></p>
  <% end %>
  <%= render 'books/list', book: @newbook, user: @user %>
 </div>

 <div class="col-md-8 offset-md-1">
 <h1>Book detail</h1>
 <table>
 <tr>
  <th></th>
  <th>Name</th>
  <th>TItle</th>
  <th>Opinion</th>
  <th>Fav</th>
  <th></th>
  <th></th>
 </tr>

 <tr id="book_<%= @book.id %>">
  <td><p class="item"><%= link_to user_path(@book.user) do %><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><% end %></p></td>
  <td><p class=item><%= link_to user_path(@book.user) do %><%= @book.user.name %><% end %></p></td>
  <td><p class=item><%= @book.title %></p></td>
  <td><p class=item><%= @book.body %></p></td>
  <td class="favorite-btn"><%= render "favorites/favorite-btn", book: @book %></td>

 <% if @book.user == current_user %>
  <td><p class=item><button type="button" class="btn btn-outline-success "><%= link_to "Edit", edit_book_path(@book) %></button></p></td>
  <td><p class=item><button type="button" class="btn btn-outline-danger"><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %></button></p></td>
 <% end %>
  <td></td>
</tr>
</table>
Comments:<%= @book.book_comments.count %>
<%= render 'book_comments/book_comment', book: @book %>

<%= form_with model:[@book, @book_comment] do |f| %>
  <%= f.text_area :comment, rows:'3',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>

 </div>
 </div>
</div>