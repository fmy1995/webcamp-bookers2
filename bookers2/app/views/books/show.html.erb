<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="container">
<div class="row">

<div class="col-md-3">
<% if flash[:notice] %>
  <p id ="notice"><%= flash[:notice] %></p>
<% end %>

<%= render 'books/list', book: @newbook, user: @user %>
  </div>

<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>

<table>
 <tr>
  <th></th>
  <th>Name</th>
  <th>TItle</th>
  <th>Opinion</th>
  <th></th>
  <th></th>
 </tr>

<tr>
  <th><p class="item"><%= link_to user_path(@book.user) do %><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><% end %></p></th>
  <th><p class=item><%= link_to user_path(@book.user) do %><%= @book.user.name %><% end %></p></th>
  <th><p class=item><%= @book.title %></p></th>
  <th><p class=item><%= @book.body %></p></th>

  <% if @book.user == current_user %>
  <th><p class=item><button type="button" class="btn btn-outline-success "><%= link_to "Edit", edit_book_path(@book) %></button></p></th>
  <th><p class=item><button type="button" class="btn btn-outline-danger"><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %></button></p></th>
  <% end %>
</tr>
</table>

<tr>
<th><div class="favorites">
  <% if @book.favorited_by?(current_user) %>
      <%= link_to book_favorites_path(@book), method: :delete do %>
        ♥<%= @book.favorites.count %> Favorites
      <% end %>
    <% else %>
      <%= link_to book_favorites_path(@book), method: :post do %>
        ♡<%= @book.favorites.count %> Favorites
      <% end %>
  <% end %>
</div></th>
</tr>


<%= @book.book_comments.count %> Comments</p>

<div class ="comments">
  <% @book.book_comments.each do |book_comment| %>
<table>
 
<tr>
  <th><%= attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th>
  <th><%= book_comment.user.name %></th>
  <th><%= book_comment.comment %></th>
  <th></th>
    <th></th>
<% if book_comment.user_id == current_user.id %>
  <th></th>
  <th><button type="button" class="btn btn-outline-danger"><%= link_to "Destroy", book_book_comment_path(book_comment), method: :delete %></button></th>
<% end %>

<% end %>

</tr>
</table>
</div>

<div class="new-comment">
<%= form_with(model:[@book, @book_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'3',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>


</div>

</div>
</div>