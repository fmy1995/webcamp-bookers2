<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="container">
<div class="row">

<% if flash[:notice] %>
  <p id ="notice"><%= flash[:notice] %></p>
<% end %>

  <div class="col-md-3">
<%= render 'books/list', book: @newbook, user: @user %>
  </div>

<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<div class="detail">
  <div class="item"><%= link_to user_path(@book.user) do %><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><% end %></div>
  <p class=item><%= link_to user_path(@book.user) do %><%= @book.user.name %><% end %></p>
  <p class=item><%= @book.title %></p>
  <p class=item><%= @book.body %></p>

  <% if @book.user == current_user %>
<p class=item><%= link_to "Edit", edit_book_path(@book) %></p>

<p class=item><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %> </p>
  <% end %>
</div>
</div>

</div>
</div>