<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="container">
<div class="row">

<% if flash[:notice] %>
  <p id ="notice"><%= flash[:notice] %></p>
<% end %>

  <div class="col-md-3">
<%= render 'books/list', book: @newbook, user: @user %>
  </div>

<h1>Book detail</h1>
<div class="detail">

  <p class=item><%= @book.user.name %></p>
  <p class=item><%= @book.title %></p>
  <p class=item><%= @book.body %></p>

  <% if @book.user == current_user %>
<p class=item><%= link_to "Edit", edit_book_path(@book) %></p>

<p class=item><%= link_to "Destory", book_path(@book), method: :delete, method: :delete, "data-confirm" => "Are you sure?" %> </p>
  <% end %>
</div>


</div>
</div>