<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  <script src="https://kit.fontawesome.com/*******.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <header >
    <h2><%= link_to "Bookers", root_path %></h2>

    <% if user_signed_in? %>

      <span>
        <%= link_to 'Home', user_path(current_user.id), class: "fas fa-home" %>
      </span>

      <span>
        <%= link_to "Users", users_path, class: "fas fa-users" %></a>
      </span>

      <span>
        <%= link_to "Books", books_path, class: "fas fa-book-open" %></a>
      </span>

      <span>
        <%= link_to "logout", destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt" %></a>
      </span>

    <% else %>
      <span>
        <%= link_to "Home", root_path, class: "fas fa-home" %>
      </span>
      </span>
       <%= link_to "About", home_about_path, class: "fas fa-link" %>
      </span>
      <span>
       <%= link_to "sign up", new_user_registration_path, class: "fas fa-user-plus" %>
      </span>
      <span>
       <%= link_to "login", new_user_session_path, class: "fas fa-sign-in-alt" %>
      </span>
    <% end %>
    </header>





    <%= yield %>
</html>
