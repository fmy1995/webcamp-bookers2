<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  <script src="https://kit.fontawesome.com/*******.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <header >
    <h2>Bookers</h2>

    <% if user_signed_in? %>

      <span>
        <i class="fas fa-home"></i><%= link_to 'Home', user_path(current_user.id) %>
      </span>

      <span>
      <i class="fas fa-users"></i></i>Users
      </span>

      <span>
        <i class="fas fa-book-open"></i><%= link_to "Books", books_path %>
      </span>

      <span>
        <i class="fas fa-sign-out-alt"></i></i><%= link_to "logout", destroy_user_session_path, method: :delete %>
      </span>

    <% else %>
      <span>
        <i class="fas fa-user-plus"></i><%= link_to "Signup", new_user_registration_path %>
      </span>
      <span>
        <i class="fas fa-sign-in-alt"></i><%= link_to "Login", new_user_session_path %>
      </span>
        <i class="fas fa-link"></i>About
      </span>

    <% end %>
    <%= yield %>
  </header>


</html>
