<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  <script src="https://kit.fontawesome.com/*******.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <header >
    <h2>Bookers</h2>

    <% if user_signed_in? %>

      <span>
        <a class="fas fa-home"><%= link_to 'Home', user_path(current_user.id) %></a>
      </span>

      <span>
      <a class="fas fa-users"><%= link_to "Users", users_path %></a>
      </span>

      <span>
        <a class="fas fa-book-open"><%= link_to "Books", books_path %></a>
      </span>

      <span>
        <a class="fas fa-sign-out-alt"><%= link_to "logout", destroy_user_session_path, method: :delete %></a>
      </span>

    <% else %>
      <span>
        <a class="fas fa-home"><%= link_to "Home", root_path %></a>
      </span>
      </span>
        <a class="fas fa-link"><%= link_to "About", homes_about_path %></a>
      </span>
      <span>
        <a class="fas fa-sign-in-alt"><%= link_to "Login", new_user_session_path %></a>
      </span>
      <span>
        <a class="fas fa-user-plus"><%= link_to "Signup", new_user_registration_path %></a>


    <% end %>
    </header>





    <%= yield %>
</html>
