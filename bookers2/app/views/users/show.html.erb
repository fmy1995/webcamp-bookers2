<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<main>
<div class="container">
<div class="row">

<div class="col-md-3">
  <% if flash[:notice] %>
  <p id ="notice"><%= flash[:notice] %></p>
  <% end %>

  <%= render 'books/list', book: @book, user: @user %>
  </div>


<div class="col-md-8 offset-md-1">
  <h1>User Books</h1>
 <table>
 <tr>
  <th>User img</th>
  <th>Title</th>
  <th>Opinion</th>
  <th>Comments</th>
 </tr>

<% @books.each do |book| %>
<tr>
  <th><p class="item"><%= link_to user_path(@user) do %><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><% end %></p></th>
  <th><p class="item"><%= link_to book_path(book.id) do %><%= book.title %><% end %></p></th>
  <th><p class="item"><%= book.body %></p></th>
  <th><p class="item"><%= book.book_comments.count %></p></th>
  <th>
  <% if book.favorited_by?(current_user) %>
      <%= link_to book_favorites_path(book), method: :delete do %>
        ♥<%= book.favorites.count %>
      <% end %>
    <% else %>
      <%= link_to book_favorites_path(book), method: :post do %>
        ♡<%= book.favorites.count %>
      <% end %>
  <% end %>
</th>


</tr>
<% end %>

</table>
</div>
</div>
</div>
</main>

