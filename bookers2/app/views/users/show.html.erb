<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<body>
<div class="container">
<div class="row">


  <% if flash[:notice] %>
  <p id ="notice"><%= flash[:notice] %></p>
  <% end %>
  <div class="col-md-3">
  <%= render 'books/list', book: @book, user: @user %>
  </div>

<div class="col-md-8 offset-md-1">
 <span>Title</span>
 <span>Opinion</span>
<% @books.each do |book| %>

<sction class =detail>
<table>
  <div class="item"><%= link_to user_path(@user) do %><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><% end %></div>
  <div class="item"><%= link_to book_path(book.id) do %><p><%= book.title %></p> <% end %></div>
  <div class="item"><p><%= book.body %></p></div>
</table>
</sction>
</div>
</div>
</div>
</body>
<% end %>
