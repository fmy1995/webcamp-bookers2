<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<body>
<div class="container">
<div class="row">
 
<div class="col-md-3">
  <% if flash[:notice] %>
  <p id ="notice"><%= flash[:notice] %></p>
  <% end %>

  <%= render 'books/list', book: @book, user: @user %>
  </div>

<div class="col-md-8 offset-md-1">
 <table>
 <tr>
  <th>Title</th>
  <th>Opinion</th>
  <th></th>
 </tr>

<% @books.each do |book| %>
<tr>
  <th><p class="item"><%= link_to user_path(@user) do %><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><% end %></p></th>
  <th><p class="item"><%= link_to book_path(book.id) do %><%= book.title %><% end %></p></th>
  <th><p class="item"><%= book.body %></p></th>
</tr>
<% end %>

</table>
</div>
</div>
</div>
</body>

